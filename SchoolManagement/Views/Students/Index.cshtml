@model IEnumerable<SchoolManagement.Views.Students.ViewModels.StudentListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.StudentEmail)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ProfessorName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ProfessorEmail)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
            </td>
        </tr>
}
    </tbody>
</table>
